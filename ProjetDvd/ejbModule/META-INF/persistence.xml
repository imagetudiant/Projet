		<class>metier.entities.Facture</class>
		<class>metier.entities.FacturePK</class>
		<class>metier.entities.Panier</class>
		<class>metier.entities.PanierHasDvd</class>
		<class>metier.entities.PanierHasDvdPK</class>
		<class>metier.entities.Realisateur</class>
